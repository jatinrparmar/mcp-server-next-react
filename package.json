{
  "name": "mcp-server-next-react",
  "version": "1.0.0",
  "description": "MCP Server for Next.js and React development - provides tools for code analysis, optimization, review, and best practices guidance",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-server-next-react": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js && npm run copy-config",
    "copy-config": "mkdir -p build/config && cp src/config/simplified-*.json build/config/ && cp src/rules/*-llm-*.json build/config/",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "test": "node scripts/test-local.js",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js",
    "start": "node build/index.js",
    "generate:rules": "node --loader ts-node/esm src/common/config-to-rules-generator.ts src/config src/rules",
    "lint:config": "node scripts/validate-config.js",
    "test:rules": "node scripts/test-rules.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "nextjs",
    "react",
    "code-analysis",
    "best-practices",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "ts-node": "^10.9.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
